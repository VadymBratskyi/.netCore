@model WebIdentity.ViewModels.LoginViewModel
 
<h2>Вход в приложение</h2>
<a href="@Url.Action("Register","Account")">Регистрация</a>
<form method="post" action="Login">
  <div>
    @Html.TextBox("Email")
    @*<label for="Email">Email</label><br/>
    <input type="email" id="Email" name="Email"/>*@
  </div>
  <div>
    @Html.Password("Password")
    @*<label for="Password">Password</label><br />
    <input type="password" id="Password" name="Password" />*@
  </div>
  <div>
    @Html.CheckBox("RememberMe", false)
    @*@Html.CheckBoxFor(c => c.RememberMe)*@
    <label for="RememberMe">RememberMe</label>
    @*<label for="RememberMe">RememberMe</label><br />
    <input id="RememberMe" name="RememberMe" />*@
  </div>
  <div>
    @Html.Hidden("ReturnUrl", "/Home/Index")
    @*<label for="ReturnUrl">ReturnUrl</label><br/>
    <input type="text" id="ReturnUrl" name="ReturnUrl" value="/Home/Index"/>*@
  </div>
  <div>
    <input type="submit" value="Войти" />
  </div>
</form>
